<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BolekLolek.MainWindow"
        Width="800"
        Height="850"
        Title="BolekLolek">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nazwa zadania:" Margin="5"/>
            <TextBox Grid.Row="0" Grid.Column="1"  Margin="5"
                     Watermark="Nazwa zadania..." x:Name="NazwaZadaniaTextBox"/>
            
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Wybierz bohatera:" Margin="5"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Width="200" Margin="5" x:Name="BohaterComboBox">
                <ComboBoxItem Content="Bolek"/>
                <ComboBoxItem Content="Lolek"/>
            </ComboBox>
            
            <Border Grid.Row="2" Grid.Column="0" Width="150" Height="150" BorderThickness="2" BorderBrush="Gray" Margin="5">
                <Image x:Name="BohaterImage" Stretch="Uniform"/>
            </Border>

         
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Priorytet:" Margin="5"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Vertical" Margin="5">
                
                <RadioButton Content="niski (łatwe)" x:Name="prioNiski" GroupName="Priorytet"/>
                <RadioButton Content="normalny (zwykłe)" x:Name="prioNormalny" GroupName="Priorytet"/>
                <RadioButton Content="wysoki (trudne)" x:Name="prioWysoki" GroupName="Priorytet"/>
                
            </StackPanel>

        
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Opcje dodatkowe:" Margin="5"/>
            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="5">
                
                <CheckBox Content="Na Dworze" x:Name="CheckNaDworze"/>
                <CheckBox Content="Potrzebny sprzęt" x:Name="CheckpSprzet"/>
                <CheckBox Content="Z udziałem innych kolegów" x:Name="CheckzUdzInnych"/>
                
            </StackPanel>


            <TextBlock Grid.Row="5" Grid.Column="0" Text="Wybierz datę:" Margin="5"/>
            <CalendarDatePicker Grid.Row="5" Grid.Column="1" x:Name="Kalendarz" Margin="5" />


            <TextBlock Grid.Row="6" Grid.Column="0" Text="Lista zadań:" Margin="5"/>
            <ListBox Grid.Row="6" Grid.Column="1" Margin="5" x:Name="ZadaniaListBox"/>
            
            
            <Button Grid.Row="7" Grid.Column="1" Margin="5,5" x:Name="DodajButton">Dodaj</Button>
            <Button Grid.Row="7" Grid.Column="1" Margin= "70, 5" x:Name="UsunButton">Usuń</Button>
        </Grid>
    </ScrollViewer>
</Window>
